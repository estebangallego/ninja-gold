<div class="container">
	<div class="row">
		<h3>Your gold: <span class="span-box"><%= @total %></span></h3>
	</div>
	<div class="row">
	  <div class="col-md-3">
	  	<div class="ninja-box">
	  		<h3>Farm</h3>
	  		<p>(earn 10 - 20 golds)</p>
		  	<form action="/rpgs/farm" method="post">
		  		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		  		<input class="btn btn-danger" type="submit" value="Find Gold!">
		  	</form>
		</div>	  
	  </div>
	  <div class="col-md-3">
	  	<div class="ninja-box">
	  		<h3>Cave</h3>
	  		<p>(earn 5 - 10 golds)</p>
		  	<form action="/rpgs/cave" method="post">
		  		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		  		<input class="btn btn-danger" type="submit" value="Find Gold!">
		  	</form>
		</div>	  
	  </div>
	  <div class="col-md-3">
	  	<div class="ninja-box">
	  		<h3>House</h3>
	  		<p>(earn 2 - 5 golds)</p>
		  	<form action="/rpgs/house" method="post">
		  		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		  		<input class="btn btn-danger" type="submit" value="Find Gold!">
		  	</form>
		</div>	  
	  </div>
	  <div class="col-md-3">
	  	<div class="ninja-box">
	  		<h3>Casino</h3>
	  		<p>(earn/takes 0 - 50 golds)</p>
		  	<form action="/rpgs/casino" method="post">
		  		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		  		<input class="btn btn-danger" type="submit" value="Find Gold!">
		  	</form>
		</div>	  
	  </div>
	</div>
	<h3>Activities</h3>
	<div class="row ninja-box activities">
		<% for @activity in @allActivities.reverse %>
			<p class="text-success"><%= @activity %></p>
		<% end %>
	</div>
	<div class="row text-center">
		<a class="btn btn-primary" href="/rpgs/reset">Play again!</a>
	</div>
</div>